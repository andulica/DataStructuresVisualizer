@page "/grid-page"

<div id="linked-list">
    @foreach (var node in linkedList)
    {
        <div class="node">
            @node._data
        </div>
        @if (node.Next != null)
        {
            <div class="arrow">→</div>
        }
    }
    <div class="node null-node">null</div>
</div>

<style>
    #linked-list {
        display: flex;
        align-items: center;
        gap: 10px; /* Adjust the space between nodes */
    }

    .node {
        padding: 10px;
        border: 2px solid black;
        border-radius: 5px; /* Round corners for node */
        text-align: center;
    }

    .null-node {
        background-color: lightgray;
    }

    .arrow {
        font-size: 20px;
    }
</style>

@code {
    private SinglyLinkedList<int> linkedList;

    protected override void OnInitialized()
    {
        linkedList = new SinglyLinkedList<int>();
        // Add elements to your linked list
        linkedList.Append(1);
        linkedList.Append(2);
        linkedList.Append(3);
        // Continue adding nodes as required
    }
}
