@page "/quiz"
@inject NavigationManager NavigationManager


<h1 class="page-title">Select data structure to test your knowledge </h1>

<div class="button-container">
    @foreach (var ds in dataStructures)
    {
        <div class="data-structure-wrapper">
            <button class="data-structure-button" @onclick="() => NavigateToQuiz(ds)">
                @ds
            </button>
        </div>
    }
</div>

<style>

    body {
        font-family: 'Roboto', Arial, sans-serif;
        background-color: #fff;
        color: #333;
        margin: 0;
        padding: 20px;
        text-align: center;
    }

    .page-title {
        color: #FFA500; /* Orange */
        margin-bottom: 20px;
    }

    .button-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .data-structure-wrapper {
        text-align: center;
        margin-bottom: 20px;
        width: 200px; /* Ensure consistent width for alignment */
    }

    .data-structure-button {
        background-color: skyblue;
        border: none;
        color: #004D40; /* Dark Green */
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.3s;
        width: 100%;
    }

        .data-structure-button:hover {
            background-color: deepskyblue; /* Green */
            transform: scale(1.1);
        }

</style>


@code {
    private string[] dataStructures = { "SinglyLinkedListQuiz", "DoublyLinkedListQuiz", "BinarySearchTreeQuiz", "QueueQuiz", "StackQuiz" };

    private void NavigateToQuiz(string dataStructureQuiz)
    {
        NavigationManager.NavigateTo($"{dataStructureQuiz}");
    }
}
