<svg width="30" height="30">
    <circle cx="16" cy="16" r="13" stroke="black" stroke-width="2" fill="@NodeColor" />
    <text x="16" y="17" text-anchor="middle" fill="black" font-size="15px" font-family="Arial" dy=".3em">@NodeValue</text>
</svg>

@code {
    [Parameter] public int NodeValue { get; set; }
    [Parameter] public bool Highlight { get; set; }

    private string NodeColor => Highlight ? "yellow" : "white";
}

