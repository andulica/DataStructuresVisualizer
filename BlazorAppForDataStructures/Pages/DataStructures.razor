@page "/dataStructure"
@inject NavigationManager NavigationManager

<h1 class="page-title">Select a Data Structure to Visualize</h1>

<div class="button-container">
    @foreach (var ds in dataStructures)
    {
        <div class="data-structure-wrapper">
            <button class="data-structure-button" @onclick="() => NavigateToVisualizer(ds)">
                @ds
            </button>
            @if (ds == "SinglyLinkedList")
            {
                <img src="/images/sll_visual.gif" alt="Singly Linked List Visualization" class="ds-gif" />
            }
            @if (ds == "BinarySearchTree")
            {
                <img src="/images/bst_visual.gif" alt="Binary Search Tree Visualization" class="ds-gif" />
            }
            @if (ds == "DoublyLinkedList")
            {
                <img src="/images/dll_visual.gif" alt="Binary Search Tree Visualization" class="ds-gif" />
            }
            
        </div>
    }
</div>

