@page "/admin/dashboard"
@inject NavigationManager NavigationManager
@inject SecureStorageService SecureStorage
@using BlazorAppForDataStructures.Services

<h3>Admin Dashboard</h3>

<div>
    <button class="btn btn-primary" @onclick="NavigateToTopics">Manage Topics</button>
    <button class="btn btn-primary" @onclick="NavigateToQuestions">Manage Questions</button>
    <button class="btn btn-primary" @onclick="NavigateToAnswers">Manage Answers</button>
</div>

<div class="mt-3">
    <button class="btn btn-danger" @onclick="Logout">Logout</button>
</div>

@code {
    private void NavigateToTopics()
    {
        NavigationManager.NavigateTo("/admin/topics");
    }

    private void NavigateToQuestions()
    {
        NavigationManager.NavigateTo("/admin/questions");
    }

    private void NavigateToAnswers()
    {
        NavigationManager.NavigateTo("/admin/answers");
    }

    private async Task Logout()
    {
        await SecureStorage.RemoveAsync("authToken");
        NavigationManager.NavigateTo("/admin/login");
    }
}